\NeedsTeXFormat{LaTeX2e}
\ProvidesFile{commonplace.lyt}[2018/09/25 Somewhat common layout]

\setmainfont{Exo-2}[
  BoldFont    = {Lato Semibold},
]
\setsansfont{Lato}
\setmathfont{STIX Two Math}

% Use XITSMath for    [     ]     (     )     {     }
% \setmathfont[range={"005B,"005D,"0028,"0029,"007B,"007D}]{XITS Math}
% но не все, а только фигурные
\setmathfont[range={"007B,"007D,"023DF}]{XITS Math}


\storePairDef{size=10}
\setfont{\getByKey{size}}

\RequirePackage{geometry}
\storePairsDef{paper-type = a4paper, page-orient=portrait}
\geometry{
  \getByKey{paper-type},
  \getByKey{page-orient},
  left=2.5cm,
  right=2.5cm,
  top=2.5cm,
  bottom=2.5cm,
  bindingoffset=0cm
}
\protected\def\note{\footnote}

\renewcommand{\arraystretch}{1}
\RequirePackage{titlesec}

