\titleformat{\chapter}
	{\sffamily\upshape\Huge}
	{\thechapter \\}
	{0.3em}{}


\titleformat{\section}
	{\sffamily\upshape\LARGE}
	{\thesection \\}
	{0.3em}{}

\titleformat{\subsection}
	{\sffamily\upshape\Large}
	{\thesubsection \\}
	{0.3em}{}
\endinput
