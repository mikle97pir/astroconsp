\newcommand*\ov[2]{
  \newcommand\case[3]{\ifstrequal{#1}{##1}{##2}{##3}}
  \case{~}{\widetilde{#2}}    {
  \case{-}{\overline{#2}}     { 
  \case{^}{\widehat{#2}}      {
  \case{0}{\overset\circ{#2}} {
{\PackageError{tmath}{Undefined option to ov: #1}} }}}}
}

\newcommand*\und[2]{
  \newcommand\case[3]{\ifstrequal{#1}{##1}{##2}{##3}}
  \case{-}{\underline{#2}}     { 
{\PackageError{tmath}{Undefined option to ov: #1}} }
}

